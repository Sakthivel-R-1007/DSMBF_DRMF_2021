<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>DDF Password Reset</title>
</head>
@{
    
    string appPath = Convert.ToString(ApplicationInstance.Application["ApplicationPath"]);
}
@model ForgotPassword
<body>
    @if (Model != null)
    {
        <table width="600" border="0" cellpadding="0" cellspacing="0" align="center" style="border:1px solid #d0121c;">
            <tr>
                <td style="padding:15px;border-bottom:4px solid #d0121c;"><img src="@appPath/Content/images/tem.jpg" style="width:598px !important;" /></td>
            </tr>
            <tr>
                <td height="200" valign="top" style="padding:50px 20px; font-family:Arial, Helvetica, sans-serif; font-size:15px;">
                    Please click  <a href="@appPath/ResetPassword/@(DSMBF_DRMF.Core.Security.EncryptandEncodeUrl(Model.UniqueId + "_" + Model.UserAccount.GUID.ToString()))">here</a> to reset your password.
                </td>
            </tr>
            <tr>
                <td style="font-family:Arial, Helvetica, sans-serif; font-size: 12px; line-height: 25px; color: #FFFFFF; text-align: center; background: #d0121c; padding:10px 0px;"> ©  Republic Auto Pte Ltd. All rights reserved.</td>
            </tr>
        </table>
    }

</body>
</html>
